{
  "manifest_version": 3,
  "name": "Etsy Image Downloader",
  "version": "1.1",
  "description": "Download high-quality images from Etsy listings with ease",
  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*.etsy.com/*",
    "https://*.etsystatic.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}